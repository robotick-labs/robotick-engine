{
    "name": "Robotick Unified Dev Container",
    "build": {
        "dockerfile": "Docker.robotick.dev",
        "context": ".."
    },
    "workspaceFolder": "/workspaces/robotick",
    "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
    },
    "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "matepek.vscode-catch2-test-adapter",
        "coderabbit.coderabbit-vscode"
    ],
    "postCreateCommand": "pwd && ls && pip install --break-system-packages -e . || true",
    "mounts": [
        "source=${env:HOME}/.ssh,target=/root/.ssh,type=bind,consistency=cached"
    ]
}