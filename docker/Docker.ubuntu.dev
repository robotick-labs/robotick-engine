FROM ubuntu:24.04

# 🛠️ Install base dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    build-essential \
    cmake \
    libopencv-dev \
    python3 \
    python3-pip \
    python3-venv \
    && apt-get clean

# 🧱 Root-level setup (install packages and MQTT libs)
COPY ./tools/setup_my_env_as_root.linux.sh /tools/setup_my_env_as_root.linux.sh
RUN chmod +x /tools/setup_my_env_as_root.linux.sh && /tools/setup_my_env_as_root.linux.sh

# Set working directory where setup.py lives
WORKDIR /workspace

# Copy all source files into container
COPY . .

# 🧼 Optional: default interactive shell
CMD ["bash"]
