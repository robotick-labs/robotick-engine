{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21
    },
    "configurePresets": [
        {
            "name": "ubuntu-x64-base",
            "hidden": true,
            "generator": "Ninja",
            "description": "Base preset for Ubuntu x64 CI builds (common compiler & generator settings)",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "ROBOTICK_PLATFORM_UBUNTU": "ON",
                "ROBOTICK_ENABLE_PYTHON": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchain-ubuntu-x64.cmake"
            }
        },
        {
            "name": "ubuntu-x64-debug",
            "inherits": "ubuntu-x64-base",
            "description": "Ubuntu Debug build (no optimizations, full asserts)",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_FLAGS_DEBUG": "-g -O0 -fno-omit-frame-pointer -fdebug-prefix-map=${sourceDir}=/workspace -DROBOTICK_DEBUG",
                "ROBOTICK_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "ubuntu-x64-development",
            "inherits": "ubuntu-x64-base",
            "description": "Ubuntu Development build (optimized with probes)",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_CXX_FLAGS_DEBUG": "-g -O1 -fno-omit-frame-pointer -fdebug-prefix-map=${sourceDir}=/workspace -DROBOTICK_DEV",
                "ROBOTICK_BUILD_CONFIG_DEVELOPMENT": "ON"
            }
        },
        {
            "name": "ubuntu-x64-release",
            "inherits": "ubuntu-x64-base",
            "description": "Ubuntu Release build (stripped, fastest)",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS_DEBUG": "-DNDEBUG -DROBOTICK_RELEASE",
                "ROBOTICK_BUILD_CONFIG_RELEASE": "ON",
                "ROBOTICK_STRIP_PROBES": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ubuntu-x64-debug",
            "configurePreset": "ubuntu-x64-debug"
        },
        {
            "name": "ubuntu-x64-development",
            "configurePreset": "ubuntu-x64-development"
        },
        {
            "name": "ubuntu-x64-release",
            "configurePreset": "ubuntu-x64-release"
        }
    ]
}