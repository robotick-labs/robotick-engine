{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21
    },
    "configurePresets": [
        {
            "name": "ubuntu-x64-base",
            "hidden": true,
            "generator": "Ninja",
            "description": "Base preset for Ubuntu x64 CI builds (common compiler & generator settings)",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "ROBOTICK_PLATFORM_UBUNTU": "ON",
                "ROBOTICK_ENABLE_PYTHON": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchain-ubuntu-x64.cmake"
            }
        },
        {
            "name": "ubuntu-x64-debug",
            "inherits": "ubuntu-x64-base",
            "description": "Ubuntu Debug build (no optimizations, full asserts)",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ROBOTICK_BUILD_CONFIG_DEBUG": "ON",
                "ROBOTICK_OPTIMIZE_OFF": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "ROBOTICK_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "ubuntu-x64-development",
            "inherits": "ubuntu-x64-base",
            "description": "Ubuntu Development build (optimized with probes)",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "ROBOTICK_BUILD_CONFIG_DEVELOPMENT": "ON"
            }
        },
        {
            "name": "ubuntu-x64-release",
            "inherits": "ubuntu-x64-base",
            "description": "Ubuntu Release build (stripped, fastest)",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ROBOTICK_BUILD_CONFIG_RELEASE": "ON",
                "ROBOTICK_STRIP_PROBES": "ON"
            }
        },
        {
            "name": "esp32s3-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Generic",
                "CMAKE_SYSTEM_PROCESSOR": "xtensa",
                "ROBOTICK_ENABLE_PYTHON": "OFF",
                "ROBOTICK_BUILD_TESTS": "OFF"
            }
        },
        {
            "name": "esp32s3-debug",
            "generator": "Ninja",
            "description": "ESP32-S3 Debug build (no optimization, no python, IDF toolchain)",
            "binaryDir": "build/esp32s3-debug",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Generic",
                "CMAKE_SYSTEM_PROCESSOR": "xtensa",
                "CMAKE_BUILD_TYPE": "Debug",
                "IDF_PATH": "/esp-idf",
                "ROBOTICK_ENABLE_PYTHON": "OFF",
                "ROBOTICK_BUILD_CONFIG_DEBUG": "ON",
                "ROBOTICK_OPTIMIZE_OFF": "ON",
                "ROBOTICK_BUILD_TESTS": "OFF"
            }
        },
        {
            "name": "esp32s3-development",
            "inherits": "esp32s3-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel",
                "ROBOTICK_BUILD_CONFIG_DEVELOPMENT": "ON"
            }
        },
        {
            "name": "esp32s3-release",
            "inherits": "esp32s3-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ROBOTICK_BUILD_CONFIG_RELEASE": "ON",
                "ROBOTICK_STRIP_PROBES": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ubuntu-x64-debug",
            "configurePreset": "ubuntu-x64-debug"
        },
        {
            "name": "ubuntu-x64-development",
            "configurePreset": "ubuntu-x64-development"
        },
        {
            "name": "ubuntu-x64-release",
            "configurePreset": "ubuntu-x64-release"
        },
        {
            "name": "esp32s3-debug",
            "configurePreset": "esp32s3-debug"
        },
        {
            "name": "esp32s3-development",
            "configurePreset": "esp32s3-development"
        },
        {
            "name": "esp32s3-release",
            "configurePreset": "esp32s3-release"
        }
    ]
}