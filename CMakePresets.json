{
    "version": 4,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21
    },
    "configurePresets": [
        {
            "name": "linux-base",
            "hidden": true,
            "generator": "Ninja",
            "description": "Base preset for Linux CI builds (common compiler & generator settings)",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "ROBOTICK_PLATFORM_LINUX": "ON",
                "ROBOTICK_ENABLE_PYTHON": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchain-linux-native.cmake"
            }
        },
        {
            "name": "robotick-engine-tests-linux-debug",
            "inherits": "linux-base",
            "description": "Linux Debug build (no optimizations, full asserts)",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "ROBOTICK_WORKLOADS_USE_ALL": "ON",
                "CMAKE_CXX_FLAGS_DEBUG": "-g -O0 -fno-omit-frame-pointer -fdebug-prefix-map=${sourceDir}=/workspace -DROBOTICK_DEBUG -DROBOTICK_ENABLE_MODEL_HEAP",
                "ROBOTICK_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "robotick-engine-tests-linux-release",
            "inherits": "linux-base",
            "description": "Linux Release build (stripped, fastest)",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ROBOTICK_WORKLOADS_USE_ALL": "ON",
                "CMAKE_CXX_FLAGS_RELEASE": "-DNDEBUG -DROBOTICK_RELEASE -DROBOTICK_ENABLE_MODEL_HEAP",
                "ROBOTICK_BUILD_CONFIG_RELEASE": "ON",
                "ROBOTICK_STRIP_PROBES": "ON"
            }
        },
        {
            "name": "esp32s3-debug",
            "displayName": "ESP32-S3 Debug (VS Code Friendly)",
            "generator": "Ninja",
            "description": "Debug build for ESP32-S3 using Espressif toolchain and SDK",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ROBOTICK_PLATFORM_ESP32": "ON",
                "ROBOTICK_BUILD_TESTS": "OFF"
            },
            "environment": {
                "IDF_PATH": "C:/Espressif/frameworks/esp-idf-v5.4.1",
                "IDF_TOOLS_PATH": "C:/Espressif"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "robotick-engine-tests-linux-debug",
            "configurePreset": "robotick-engine-tests-linux-debug"
        },
        {
            "name": "robotick-engine-tests-linux-release",
            "configurePreset": "robotick-engine-tests-linux-release"
        },
        {
            "name": "esp32s3-debug",
            "configurePreset": "esp32s3-debug"
        }
    ]
}