{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Example: C++ - robotick_main",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/examples/cpp/desktop-testbed/build/desktop-testbed-linux-debug/desktop-testbed",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/examples/cpp/desktop-testbed/build/desktop-testbed-linux-debug"
                },
                {
                    "name": "ROBOTICK_ENABLE_BACKTRACE",
                    "value": "1"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "engineLogging": true
            },
            "preLaunchTask": "Build Example: C++ - robotick_main",
            "additionalSOLibSearchPath": "${workspaceFolder}/build/linux-debug",
            "sourceFileMap": {
                "${workspaceFolder}": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Debug robotick_tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/linux-debug/cpp/tests/robotick_tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/build/linux-debug"
                },
                {
                    "name": "ROBOTICK_ENABLE_BACKTRACE",
                    "value": "1"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "engineLogging": true
            },
            "preLaunchTask": "Build robotick_tests",
            "additionalSOLibSearchPath": "${workspaceFolder}/build/linux-debug",
            "sourceFileMap": {
                "/workspace": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}