{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Example: desktop-testbed",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "--preset",
        "desktop-testbed-linux-debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}/examples/cpp/desktop-testbed"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Build robotick_engine_tests",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build/${input:buildPreset}",
        "--config",
        "Debug",
        "--target",
        "robotick_engine_tests"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "buildPreset",
      "type": "command",
      "command": "cmake.activeBuildPresetName",
      "description": "Choose the CMake build preset"
    }
  ]
}